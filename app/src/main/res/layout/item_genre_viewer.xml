<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="104dp"
            android:layout_height="135dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/genreBookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/crimson_text"
            android:text="Shingeki No Kyojin"
            android:textColor="#2E3A59"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/genreAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/lato"
            android:text="Mikasa Ackerman"
            android:textColor="#667188"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/genreBookName" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/icon_red_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_item_genreviewer_genre1"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:background="#2E3A5926"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Science"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/genreAuthor" />

        <TextView
            android:id="@+id/txt_item_genreviewer_genre2"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:background="#2E3A5926"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Inspiration"
            app:layout_constraintStart_toEndOf="@+id/txt_item_genreviewer_genre1"
            app:layout_constraintTop_toBottomOf="@+id/genreAuthor" />

</androidx.constraintlayout.widget.ConstraintLayout>